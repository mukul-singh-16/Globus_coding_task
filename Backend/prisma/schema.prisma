generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}





model Question {
  id             Int       @id @default(autoincrement())
  question_text  String
  question_type  QuestionType
  options        String?   // Only for MCQs (Stored as JSON)
  correct_answer String?   // For MCQs and Fill-in-the-Blank
}

enum QuestionType {
  MCQ
  FILL_IN_THE_BLANK
  DESCRIPTIVE
}
